<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        style="@style/tv_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_phone_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_phone_type" />

        <TextView
            android:id="@+id/tv_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米5c" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_phone_imei" />

        <TextView
            android:id="@+id/tv_phone_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="143089349843089099" />
    </LinearLayout>

    <TextView
        style="@style/tv_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_proxy_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_proxy_ip" />

        <TextView
            android:id="@+id/tv_ip_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.3.58" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_proxy_city" />

        <TextView
            android:id="@+id/tv_ip_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州市" />
    </LinearLayout>

    <TextView
        style="@style/tv_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv_use_scope" />

    <TextView
        android:id="@+id/tv_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="微信，抖音，拼多多" />


    <Button
        android:id="@+id/bt_phone_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_phone_setup" />

    <Button
        android:id="@+id/bt_multi_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_multi_setup" />

    <TextView
        android:id="@+id/tv_setup_tip"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:text="改机提示"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>